package extrafront;

public class ExtraFront {
	public String extraFront(String str) {
		String firstTwoChars;
		  
		if(str.length() > 1) {
		  firstTwoChars = str.substring(0, 1);
		}
		else {
		  firstTwoChars = str.substring(0);
		}
		
		return firstTwoChars + firstTwoChars + firstTwoChars;
	}

}
