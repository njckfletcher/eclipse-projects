package testers;

public class EndsLy {
	
	public EndsLy() {
		
	}
	
	public boolean endsLy(String str) {
		  
		  int point = str.length() - 2;
		  
		  System.out.println(str.substring(point, str.length()));
		  
		  String lastTwoChars = str.substring(point, str.length());
		  
		  if(lastTwoChars == "ly") {
		    return true;
		  }
		  else {
		    return false;
		  }
		}

}
